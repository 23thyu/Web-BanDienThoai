<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>

        #div-content {
            width: 82%;
            height: auto;
            margin-left: 275px;
            margin-top:50px;
        }

        #div-left {
            width: 18%;
            height: 100vh; /* Đảm bảo chiều cao chiếm 100% viewport */
            position: fixed; /* Đảm bảo sidebar không bị cuộn */
            float: left;
            overflow-y: auto; /* Nếu sidebar dài hơn, cho phép cuộn */
            padding-top: 20px;
        }

        .nav-link {
            padding: 10px 15px;
            display: block;
        }

            .nav-link:hover {
                background-color: #495057;
                border-radius: 5px;
            }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Menu bên trái -->
            <div id="div-left" class="bg-dark text-white">
                <ul class="nav flex-column">                 
                    <li class="nav-item" style="margin-left: 73px; margin-right: 73px;">
                        <a class="navbar-brand" href="/Home/TrangChu">
                            <img src="~/Content/Image/logoxoaphong.png" style="width:115px;height:105px" />
                        </a>
                        <h2 style="text-align:center;font-weight:bold">Admin</h2>
                        <br />
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "PRODUCTs", new { area = "Admin" })">Quản lý chi tiết sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "TaiKhoan", new { area = "Admin" })">Quản lý tài khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "SanPham", new { area = "Admin" })">Quản Lý Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "LoaiSanPham", new { area = "Admin" })">Loại Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "NhanVien", new { area = "Admin" })">Quản lý nhân viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "KhachHang", new { area = "Admin" })">Quản lý khách hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "HoaDon", new { area = "Admin" })">Quản lý hóa đơn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "NhaCungCap", new { area = "Admin" })">Nhà cung cấp</a>
                    </li>

                </ul>
            </div>
            <!-- Nội dung chính -->
            <div id="div-content" >
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>